{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "removeComments": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "exclude": ["node_modules"],
  "include": [ "./src/**/*.ts"]
}